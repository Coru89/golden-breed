{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
@media screen and (max-width: 749px) {
  .mobile_banner img {
    width: 100%;
    height: auto;
    display: block; /* Ensure it adapts to the width and maintains aspect ratio */
  }
  #Banner-{{ section.id }} .desktop_banner {display: none !important;}
}

@media screen and (min-width: 750px) {
  .desktop_banner img {
    width: 100%;
    height: auto;
    display: block; /* Adapt to the width and maintain aspect ratio */
  }
  #Banner-{{ section.id }} .mobile_banner {display: none !important;}
}
{%- endstyle -%}

<div id="Banner-{{ section.id }}" class="banner banner--medium banner--adapt banner--mobile-bottom banner--desktop-transparent">
  <div class="desktop_banner banner__media media">
    <img
      srcset="{{ section.settings.image_desktop | img_url: '375x' }} 375w,
              {{ section.settings.image_desktop | img_url: '750x' }} 750w,
              {{ section.settings.image_desktop | img_url: '1100x' }} 1100w,
              {{ section.settings.image_desktop | img_url: '1500x' }} 1500w,
              {{ section.settings.image_desktop | img_url: '1780x' }} 1780w,
              {{ section.settings.image_desktop | img_url: '2000x' }} 2000w,
              {{ section.settings.image_desktop | img_url: '3000x' }} 3000w,
              {{ section.settings.image_desktop | img_url: '3840x' }} 3840w,
              {{ section.settings.image_desktop | img_url: 'master' }} {{ section.settings.image_desktop.width }}w"
      sizes="(min-width: 750px) 100vw"
      src="{{ section.settings.image_desktop | img_url: '1500x' }}"
      alt="{{ section.settings.image_desktop.alt | escape }}"
      loading="lazy"
    >
  </div>
  <div class="banner__media media mobile_banner">
    <img
      srcset="{{ section.settings.image_mobile | img_url: '375x' }} 375w,
              {{ section.settings.image_mobile | img_url: '750x' }} 750w,
              {{ section.settings.image_mobile | img_url: '1100x' }} 1100w,
              {{ section.settings.image_mobile | img_url: '1500x' }} 1500w,
              {{ section.settings.image_mobile | img_url: '1780x' }} 1780w,
              {{ section.settings.image_mobile | img_url: '2000x' }} 2000w,
              {{ section.settings.image_mobile | img_url: '3000x' }} 3000w,
              {{ section.settings.image_mobile | img_url: '3840x' }} 3840w,
              {{ section.settings.image_mobile | img_url: 'master' }} {{ section.settings.image_mobile.width }}w"
      sizes="(max-width: 749px) 100vw"
      src="{{ section.settings.image_mobile | img_url: '1500x' }}"
      alt="{{ section.settings.image_mobile.alt | escape }}"
      loading="lazy"
    >
  </div>
  <div class="banner__content banner__content--{{ section.settings.desktop_text_box_position }} page-width">
    <div class="banner__box color-{{ section.settings.color_scheme }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="banner__heading {% if block.settings.heading_size == 'medium' %}h1{% else %}h0{% endif %}" {{ block.shopify_attributes }}>
              <span>{{ block.settings.heading }}</span>
            </h2>
          {%- when 'text' -%}
            <div class="banner__text" {{ block.shopify_attributes }}>
              <span>{{ block.settings.text }}</span>
            </div>
          {%- when 'buttons' -%}
            <div class="banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}" {{ block.shopify_attributes }}>
              {%- if block.settings.button_label_1 != blank -%}
                <a{% if block.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_1 }}"{% endif %}
                class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">
                {{ block.settings.button_label_1 | escape }}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a{% if block.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %}
                href="{{ block.settings.button_link_2 }}"{% endif %}
                class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">
                {{ block.settings.button_label_2 | escape }}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

