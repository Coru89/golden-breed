{{ 'section-accordion.css' | asset_url | stylesheet_tag }}

{%- ########################################################################## 
    # Label: Heading
    # Returns: a string or an empty object(if nothing has been entered)
    # Filters: https://shopify.dev/api/liquid/objects#string 
    ########################################################################## -%}
    {{ section.settings.heading }} 
    
    {%- ########################################################################## 
    # Label: Sub Heading
    # Returns: a string or an empty object(if nothing has been entered)
    # Filters: https://shopify.dev/api/liquid/objects#string 
    ########################################################################## -%}
    {{ section.settings.sub_heading }} 
    
    {%- for block in section.blocks -%}
      {%- case block.type -%}
    
        {%- when 'questionanswer' -%}
          {%- ########################################################################## 
          # Label: Question
          # Returns: a string or an empty object(if nothing has been entered)
          # Filters: https://shopify.dev/api/liquid/objects#string 
          ########################################################################## -%}
          {{ block.settings.question }} 
    
          {%- ########################################################################## 
          # Label: Answer
          # Returns: a string or an empty object(if nothing has been entered)
          # Filters: https://shopify.dev/api/liquid/objects#string 
          ########################################################################## -%}
          {{ block.settings.answer }} 
    
      {%- endcase -%}
    {%- endfor -%}
    
    {% schema %}
      {
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "FAQs",
          "placeholder": "FAQs"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub Heading",
          "default": "Our commonly asked questions...",
          "placeholder": "Our commonly asked questions..."
        }
      ],
      "blocks": [
        {
          "name": "Question/Answer",
          "type": "questionanswer",
          "settings": [
            {
              "type": "text",
              "id": "question",
              "label": "Question"
            },
            {
              "type": "textarea",
              "id": "answer",
              "label": "Answer"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Accordion"
        }
      ]
    }  
    {% endschema %}