      "placeholder": "8:30am - 5:30pm"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "placeholder": "02 6680 7944"
    },
    {
      "type": "text",
      "id": "whatsapp",
      "label": "WhatsApp",
      "placeholder": "02 6680 7944"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
