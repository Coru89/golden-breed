{{ 'section-shop-contact-panel.css' | asset_url | stylesheet_tag }}

{% comment %}
  {{ section.settings.driving_directions }}

  {{ section.settings.parking_information }}

  {{ section.settings.wheel_chair_accessibility_information }}

  {{ section.settings.pet_friendliness }}
{% endcomment %}

<section class="shop-contact">
  <div class="shop-contact__border"></div>
  <div class="shop-contact__wrapper page-width">
    <div class="shop-contact__grid grid">
      <div class="grid__item">
        {{ section.settings.google_maps_embed }}
      </div>
      <div class="grid__item">
        <h2>{{ section.settings.heading }}</h2>
        <span class="shop-contact__description"></span>
        {% comment %} logo {% endcomment %}

        <div class="shop-contact__group">
          <div>Visit us</div>
          <div class="shop-contact__shop-name">{{ section.settings.shop_name }}</div>
          <div class="shop_cotact__address">{{ section.settings.address }}</div>
          <div class="shop-contact__hours">{{ section.settings.hours }}</div>
        </div>

        <div class="shop-contact__group">
          <div>Phone</div>
          <div class="shop-contact__phone-number">{{ section.settings.phone }}</div>
        </div>

        <div class="shop-contact__group">
          <div>WhatsApp</div>
          <div class="shop-contact__whatsapp">{{ section.settings.whatsapp }}</div>
        </div>

        <div class="shop-contact__group">
          <div>Email</div>
          <div class="shop-contact__email">{{ section.settings.email }}</div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop Contact Panel Byron",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "placeholder": "Rent A Surfboard"
