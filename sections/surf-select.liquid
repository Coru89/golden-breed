{%- ########################################################################## 
    # Label: Heading
    # Returns: a string or an empty object(if nothing has been entered)
    # Filters: https://shopify.dev/api/liquid/objects#string 
    ########################################################################## -%}
    {{ section.settings.heading }} 
    
    {%- ########################################################################## 
    # Label: Summary
    # Returns: a string or an empty object(if nothing has been entered)
    # Filters: https://shopify.dev/api/liquid/objects#string 
    ########################################################################## -%}
    {{ section.settings.summary }} 
    
    {%- for block in section.blocks -%}
      {%- case block.type -%}
    
        {%- when 'surboard' -%}
          {%- ########################################################################## 
          # Label: Heading
          # Returns: a string or an empty object(if nothing has been entered)
          # Filters: https://shopify.dev/api/liquid/objects#string 
          ########################################################################## -%}
          {{ block.settings.heading }} 
    
          {%- ########################################################################## 
          # Label: Board Description
          # Returns: a string or an empty object(if nothing has been entered)
          # Filters: https://shopify.dev/api/liquid/objects#string 
          ########################################################################## -%}
          {{ block.settings.board_description }} 
    
          {%- ########################################################################## 
          # Label: Board Image
          # Returns: an image object or nil(if no selection has been made)
          # Image Properties: https://shopify.dev/api/liquid/objects#image
          # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
          ########################################################################## -%}
          {%- assign board_image = block.settings.board_image -%}
          {{ board_image | image_url: width: board_image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
    
          {%- ########################################################################## 
          # Label: Card Background Color
          # Returns: a color object or blank(if no selection has been made)
          # Color Properties: https://shopify.dev/api/liquid/objects#color
          ########################################################################## -%}
          {{ block.settings.card_background_color }} 
    
      {%- endcase -%}
    {%- endfor -%}
    
    {% schema %}
      {
      "name": "Surfboard Selector",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Which Surfboard Should You Hire?"
        },
        {
          "type": "textarea",
          "id": "summary",
          "label": "Summary",
          "default": "Renting a surfboard can be daunting with all the choices, shapes and sizes, and the various Noosa breaks. Here’s a simple guide that’ll get you started."
        }
      ],
      "blocks": [
        {
          "name": "Surboard",
          "type": "surboard",
          "settings": [
            {
              "type": "text",
              "id": "heading",
              "label": "Heading",
              "placeholder": "Surfboard"
            },
            {
              "type": "textarea",
              "id": "board_description",
              "label": "Board Description"
            },
            {
              "type": "image_picker",
              "id": "board_image",
              "label": "Board Image"
            },
            {
              "type": "color",
              "id": "card_background_color",
              "label": "Card Background Color"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Surfboard Selector"
        }
      ]
    }  
    {% endschema %}
    
    {% stylesheet %}
    {% endstylesheet %}
    
    {% javascript %}
    {% endjavascript %}