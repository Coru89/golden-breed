{%- ########################################################################## 
  # Label: Heading
  # Returns: a string or an empty object(if nothing has been entered)
  # Filters: https://shopify.dev/api/liquid/objects#string 
  ########################################################################## -%}
  {{ section.settings.heading }} 
  
  {%- ########################################################################## 
  # Label: Summary
  # Returns: a string or an empty object(if nothing has been entered)
  # Filters: https://shopify.dev/api/liquid/objects#string 
  ########################################################################## -%}
  {{ section.settings.summary }} 
  
  {%- ########################################################################## 
  # Label: Variation
  # Returns a string. i.e. the value of the selected option
  # Filters: https://shopify.dev/api/liquid/objects#string
  ########################################################################## -%}
  {{ section.settings.variation }} 
  
  {%- ########################################################################## 
  # Label: Main Image
  # Returns: an image object or nil(if no selection has been made)
  # Image Properties: https://shopify.dev/api/liquid/objects#image
  # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
  ########################################################################## -%}
  {%- assign main_image = section.settings.main_image -%}
  {{ main_image | image_url: width: main_image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
  
  {%- ########################################################################## 
  # Label: Small Image 1
  # Returns: an image object or nil(if no selection has been made)
  # Image Properties: https://shopify.dev/api/liquid/objects#image
  # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
  ########################################################################## -%}
  {%- assign small_image_1 = section.settings.small_image_1 -%}
  {{ small_image_1 | image_url: width: small_image_1.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
  
  {%- ########################################################################## 
  # Label: Small Image 2
  # Returns: an image object or nil(if no selection has been made)
  # Image Properties: https://shopify.dev/api/liquid/objects#image
  # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
  ########################################################################## -%}
  {%- assign small_image_2 = section.settings.small_image_2 -%}
  {{ small_image_2 | image_url: width: small_image_2.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
  
  {%- ########################################################################## 
  # Label: Small Image 3
  # Returns: an image object or nil(if no selection has been made)
  # Image Properties: https://shopify.dev/api/liquid/objects#image
  # Image Filters: https://shopify.dev/api/liquid/filters#image_tag, https://shopify.dev/api/liquid/filters#image_url
  ########################################################################## -%}
  {%- assign small_image_3 = section.settings.small_image_3 -%}
  {{ small_image_3 | image_url: width: small_image_3.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}
  
  {% schema %}
    {
    "name": "Surfboard Selector",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "summary",
        "label": "Summary"
      },
      {
        "type": "select",
        "id": "variation",
        "label": "Variation",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "main_image",
        "label": "Main Image",
        "info": "Displayed Underneath Text and on Mobile"
      },
      {
        "type": "image_picker",
        "id": "small_image_1",
        "label": "Small Image 1"
      },
      {
        "type": "image_picker",
        "id": "small_image_2",
        "label": "Small Image 2"
      },
      {
        "type": "image_picker",
        "id": "small_image_3",
        "label": "Small Image 3"
      }
    ],
    "presets": [
      {
        "name": "Surfboard Selector"
      }
    ]
  }  
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
  {% javascript %}
  {% endjavascript %}