{% schema %}
{
  "name": "Image Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "summary",
      "label": "Summary"
    },
    {
      "type": "select",
      "id": "variation",
      "label": "Variation",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image",
      "info": "Displayed Underneath Text and on Mobile"
    },
    {
      "type": "image_picker",
      "id": "small_image_1",
      "label": "Small Image 1"
    },
    {
      "type": "image_picker",
      "id": "small_image_2",
      "label": "Small Image 2"
    },
    {
      "type": "image_picker",
      "id": "small_image_3",
      "label": "Small Image 3"
    }
  ],
  "presets": [
    {
      "name": "Image Grid"
    }
  ]
}
{% endschema %}
